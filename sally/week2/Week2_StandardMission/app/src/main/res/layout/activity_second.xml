<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="14"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1">

        <TextView
            android:id="@+id/shop"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_margin="20dp"
            android:text="@string/shoptitle"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/insta_more"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="1" />

        <ImageView
            android:id="@+id/insta_more"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:src="@drawable/insta_more"
            app:layout_constraintBottom_toBottomOf="@+id/shop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/shop"
            app:layout_constraintTop_toTopOf="@+id/shop" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="20dp"
        android:drawableLeft="@drawable/ic_baseline_search_24"
        android:drawableTint="@color/darkgray"
        android:text="@string/shopsearch"
        android:textColor="@color/darkgray"
        android:textAllCaps="false"
        android:textAlignment="textStart"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="20dp"
        android:text="@string/video"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_marginTop="10dp"
        >

        <TableRow
            android:weightSum="2">

            <ImageView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/first"
                android:scaleType="centerCrop"/>
            <ImageView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:src="@drawable/second"
                android:scaleType="centerCrop"
                android:layout_marginLeft="5dp"/>

        </TableRow>


    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_marginTop="5dp"
        >

        <TableRow
            android:weightSum="2">

            <ImageView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/third"
                android:scaleType="centerCrop"/>
            <ImageView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:src="@drawable/fouth"
                android:scaleType="centerCrop"
                android:layout_marginLeft="5dp"/>

        </TableRow>


    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:layout_marginTop="5dp"
        >

        <TableRow
            android:weightSum="2">

            <ImageView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fifth"
                android:scaleType="centerCrop"/>
            <ImageView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:src="@drawable/six"
                android:scaleType="centerCrop"
                android:layout_marginLeft="5dp"/>

        </TableRow>


    </TableLayout>



</LinearLayout>